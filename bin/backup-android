#!/usr/bin/env bash

# Backs up the default adb device.
# Assumes root access.

set -Eeu -o pipefail

timestamp=$(date +%Y%m%d%H%M%S)
mkdir -- "$timestamp"
cd -- "$timestamp"

echo "Creating backup $timestamp"

do_adb_pull() {
	local dir
	local localdir
	dir="$1"
	localdir="$2"
	echo "Pulling $dir..."
	mkdir -p $localdir/$dir
	adb pull -a $dir $(dirname $localdir/$dir)
}

do_tar() {
	local dir
	local localfile
	local excludes
	dir="$1"
	localfile="$2"
	echo "Building exclude list for $dir..."
	excludes=$(adb shell mktemp)
	adb shell "find $dir -type p -o -type s > $excludes"
	adb shell "cat $excludes" | sed -E 's/^/\t/'
	echo "Tarring $dir..."
	adb shell "tar -c -X$excludes $dir" > $localfile
}

# user files but also includes some app data:
do_adb_pull /data/media/0 data.media.0

# mostly app data?
do_tar /data/user/0 data.user.0.tar
# /data/data is the same inode as /data/user/0, although I don't know through which mechanism:
# do_tar /data/data data.data.tar

# more app data? (already part of data.media.0 above)
do_tar /data/media/0/Android/data data.media.0.Android.data.tar

# system settings:
do_tar /data/system data.system.tar
do_tar /data/system_de/0 data.system_de.0.tar

echo "Done."
